<!-- Info Banner -->
<div class="info-banner" style="background-image: url(https://res.cloudinary.com/tichel/image/upload/v1602492410/CF%20Website/Original%20Pictures/QQ%E5%9B%BE%E7%89%8720171129113247_vl92sb.jpg); background-position: 50% 48%">
  <div class="info-banner-title-blue">
    <h1>Products</h1>
  </div>
</div>
<div class="container">
  <div class="product-category-title">
    <h3>Pharmaceutical Products</h3>
  </div>
  <div class="product-category-title">
    <h3>Consumer Products</h3>
    <% @products.each do |e| %>
      <div class="card-product">
        <img src=<%= e.imgurl %> />
        <div class="card-product-infos">
          <h2><%= "#{e.product_family} #{e.product_name}" %></h2>
          <p><%= e.short_description %></p>
          <div class="btn-area">
            <%= link_to product_path(e) do %>
              <div class="btn btn-flat btn-product">See More</div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="card-product">
      <img src="https://res.cloudinary.com/tichel/image/upload/v1598851063/CF%20Website/Product/Consumer/Product_Consumer_AuroAir_physiological_seawater_nasal_spray_aluminum_pot_100_ml_f4z7eo.jpg" />
      <div class="card-product-infos">
        <h2>AuroAir Physiological seawater nasal spray</h2>
        <p>Rhinitis care, daily care, relieve nasal congestion, reconstruct nasal environment</p>
        <div class="btn-area">
          <a class="btn btn-flat btn-product" href="https://cfair.jd.com/">See More</a>
        </div>
      </div>
    </div>
  </div>
  <div class="product-category-title">
    <h3>Personal Care Products</h3>
  </div>
</div>
