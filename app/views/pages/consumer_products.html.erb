<div class="info-banner consumer-hc-banner-bg">
  <div class="info-banner-title info-title">
    <h1>Consumer<br>Healthcare<br>Products</h1>
  </div>
</div>
<div class="">
  <div class="container pad-t-rem2">
    <div class="info-container">
      <div class="mall-card-container">
        <%= link_to "https://mall.jd.com/index-10054849.html", :class=>"mall-card" do %>
          <%= image_tag "products/auro-air-jd", alt: "alttext", class: "w100" %>
          <div class="mall-card-text">          
            <h3>AuroAir family<sup>&reg;</sup> - JD.com</h3>
            <p>mall.jd.com</p>
          </div>
        <% end %>
        <%= link_to "https://cfair.tmall.com/index.htm", :class=>"mall-card" do %>
          <%= image_tag "products/auro-air-tmall", alt: "alttext", class: "w100"%>
          <div class="mall-card-text">          
            <h3>AuroAir family<sup>&reg;</sup> - Tmall.com</h3>
            <p>cfair.tmall.com</p>
          </div>
        <% end %>
      </div>    
    </div>
  </div>
  <div class="bg-light-color">
    <div class="info-container">
      <div class="card-product-container pad-t-rem2">
        <% @consumer_products.each do |e| %>
          <div class="card-product">
            <%= image_tag "#{e.imgurl}", alt: "product picture" %>
            <div class="card-product-overlay">
              <h2><%= "#{e.product_family}"%><sup>&reg;</sup> <%= "#{e.product_name}" %></h2>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
