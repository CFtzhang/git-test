    </div>
  </div>
  <div class="bg-light-color">
    <div class="info-container">
      <div class="dropdown show">
        <div class="btn btn-secondary dropdown-toggle pad-lr-rem2 mar-lr-rem1" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Choose a product
        </div>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item">Choose a product</a>
          <% @consumer_products.each do |e| %>
            <a class="dropdown-item" href=<%= "products/#{e.id}" %>><%= "#{e.product_family} #{e.product_name}" %></a>
          <% end %>
        </div>
      </div>
      <div class="card-product-container pad-t-rem2">
        <% @consumer_products.each do |e| %>
          <div class="card-product">
            <%= image_tag "#{e.imgurl}", alt: "product picture" %>
            <div class="card-product-infos">
              <h2><%= "#{e.product_family} #{e.product_name}" %></h2>
              <p><%= e.short_description %></p>
              <div class="btn-area">
                <%= link_to product_path(e) do %>
                  <div class="btn-flat btn-product">See More</div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
