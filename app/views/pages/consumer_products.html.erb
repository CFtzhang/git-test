            <p>mall.jd.com</p>
          </div>
        <% end %>
        <%= link_to "https://cfair.tmall.com/index.htm", :class=>"mall-card" do %>
          <%= image_tag "products/auro-air-tmall", alt: "alttext", class: "w100"%>
          <div class="mall-card-text">          
            <h3>AuroAir familyTM - Tmall.com</h3>
            <p>cfair.tmall.com</p>
          </div>
        <% end %>
      </div>
